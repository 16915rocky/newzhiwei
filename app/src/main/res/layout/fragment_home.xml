<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLightBlue"
        app:layout_scrollFlags="scroll|enterAlways"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.ToolbarPopupOverlay"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/img_scaner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/ic_scaner"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/bg_corner_rectangle_white"/>
            <ImageView
                android:id="@+id/img_mail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_mail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <com.chinamobile.newzhiwei.ui.widgets.VerticalScrollView
        android:id="@+id/nsv_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.youth.banner.Banner
        android:id="@+id/banner_main"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_corner_rectangle_lightblue">
            <ImageView
                android:id="@+id/img_main_fault"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_main_fault"/>
            <TextView
                android:id="@+id/tv_main_fault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障视图"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/img_main_fault"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_corner_rectangle_lightgreen">
            <ImageView
                android:id="@+id/img_main_monitor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/img_main_monitor"/>
            <TextView
                android:id="@+id/tv_main_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监控视图"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/img_main_monitor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_corner_rectangle_deepblue">
            <ImageView
                android:id="@+id/img_main_operate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@mipmap/img_main_operate"/>
            <TextView
                android:id="@+id/tv_main_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运营视图"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/img_main_operate"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_headline"/>
       <ViewFlipper
           android:id="@+id/vf_home_ad"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:autoStart="true"
           android:inAnimation="@anim/slide_in_bottom"
           android:outAnimation="@anim/slide_out_up" />
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/oval_red"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="能力开发"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/dimen_18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应有尽有"
                android:layout_marginTop="@dimen/dimen_42dp"
                android:textSize="@dimen/dimen_15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorLightGray"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_communication_skills"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知识宝库"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/dimen_18dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头脑王者"
                android:layout_marginTop="@dimen/dimen_42dp"
                android:textSize="@dimen/dimen_15dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorLightGray"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_competition"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">
            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorLightBlue">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="你所关注"/>
        </LinearLayout>
        <include layout="@layout/view_home_ad_item"/>
        <include layout="@layout/view_home_ad_item"/>
        <include layout="@layout/view_home_ad_item"/>
    </LinearLayout>
    </com.chinamobile.newzhiwei.ui.widgets.VerticalScrollView>
</LinearLayout>